<div class="header d-flex flex-row justify-content-between p-2">
  <h5>you Ride!</h5>
  <%= link_to "Post a vehicle to rent!", new_vehicle_path, class:"btn btn-primary" %>
</div>
<h1>All our vehicles</h1>
<br>
<div class="container">
 <ul>
   <% @vehicles.each do |vehicle| %>
   <div class="card d-flex justify-content-center display-inline m-3 p-3" style="width: 18rem;">
     <h3 class="card-title"><%= vehicle.category %></h3>
     <%= link_to "See details", vehicle_path(vehicle), class:"card-link btn btn-light" %>
   </div>
   <% end %>
 </ul>
</div>
